@{
    ViewBag.Title = "MutiTalk";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @{ 
        <link href="~/Plugins/Innocellence.WechatTalk/Styles/talk.css" rel="stylesheet">
        <script src="~/Scripts/jquery-1.11.1.min.js"></script>
        <script src="~/Plugins/Innocellence.WechatTalk/Scripts/jquery.signalR-2.2.1.min.js"></script>
        <script src="~/signalr/hubs"></script>
        <script src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js"></script>       
        <script>
            $(function () {
                wx.config({
                    debug: true, // 开启调试模式,调用的所有api的返回值会在客户端alert出来，若要查看传入的参数，可以在pc端打开，参数信息会通过log打出，仅在pc端时才会打印。
                    appId: '@ViewBag.app', // 必填，公众号的唯一标识
                    timestamp: '@ViewBag.timestamp', // 必填，生成签名的时间戳
                    nonceStr: '@ViewBag.nonceStr', // 必填，生成签名的随机串
                    signature: '@ViewBag.signature',// 必填，签名，见附录1
                    jsApiList: ['chooseImage'] // 必填，需要使用的JS接口列表，所有JS接口列表见附录2
                });
            })           
        </script>
        <script src="~/Plugins/Innocellence.WechatTalk/Scripts/main.js"></script>

    }
    @*@BaseModuleUrl + "Content/sss.gif"*@

    <sc>
    
</head>
<body>



<input type="text" id="Placeholder" value="@ViewBag.WeChatUserID" hidden="true" />
<input type="text" value="@ViewBag.ImageUrl" hidden="true" id="headerImg">
<div class="site-chat clearfix">
    <div class="site-chat__body clearfix">
        <ul id="messages" class="site-chat__list">
            <div class="site-chat__loading site-chat__loading--up" id="js-chat__loading--up">
            </div>


        </ul>
    </div><!-- /end .site-chat__body -->
    <div class="site-chat__footer clearfix">
        <div class="site-chat__footer--inside">
            <div class="site-chat__input--block">
                <div class="site-chat__input--border"></div>
                <input id="msg" type="text" class="site-chat__input--element">               
            </div>           
            <div class="site-chat__plus--block">
                    <span class="site-chat__plus--button">+</span>
            </div>
            <div class="site-chat__send--block">
                <span id="broadcast" class="site-chat__send--button">发送</span>
            </div>
        </div>
    </div><!-- /edn .site-chat__footer -->
</div>
</body>
</html>