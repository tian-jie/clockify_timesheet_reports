                            <th style="width:14%">@T("APPName")</th>
                            <th style="width:22%">@T("Title")</th>
                            <th style="width:8%">@T("Category")</th>
                            <th style="width:4%">@T("Read Count")</th>
                            <th style="width:4%">@T("Thumb Count")</th>
                            <th style="width:12%">@T("Published")</th>
