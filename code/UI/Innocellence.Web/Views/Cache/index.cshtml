                              <th style="width:5%;text-align:center;">@T("ID")</th>
                              <th style="width:45%;">@T("CategoryName")</th>
                              <th style="width:10%;">@T("Operation")</th>
                          </tr>
                      </thead>
                  </table>
              </div>
          </div>

          
          <!--/End surveyEdit-->
      </div>
 </div>

