                @foreach (var item in ViewBag.KeywordTypes)
            {
                if (@Model.KeywordType == item.Value)
                {
                <option value="@item.Value" selected="selected">@item.Description</option>
                    }
                    else
                    {
                <option value="@item.Value">@item.Description</option>
                    }
                }
            </select>
        </div>
    </div>

    <!-- 口令是文本类型时显示 -->
