    const int enumNormalMenuVal = (int)AutoReplyMenuEnum.NORMAL;
    const int enumScanVal = (int)AutoReplyMPKeywordEnum.SCAN;
    const int enumFocusWithScanVal = (int)AutoReplyMPKeywordEnum.SubscribeWithScan;
    const int enumFocusVal = (int)AutoReplyMPKeywordEnum.SubscribeEvent;
    const int enumReplyLinkVal = (int)AutoReplyContentEnum.LINK;
    const int enumReplyTextVal = (int)AutoReplyContentEnum.TEXT;
    const int enumArticleTextVal = (int)AutoReplyContentEnum.NEWS;

    const int enumReplyNewsLatest = (int)AutoReplyNewsEnum.LATEST;
    const int enumReplyNewsManual = (int)AutoReplyNewsEnum.MANUAL;

    var jsonModel = new JavaScriptSerializer().Serialize(Model);

    // 编辑Flag
    bool isEdit = Model.Id > 0;

    // 编辑：菜单型时使用
    var isEditMenu = false;
    var menuTypeVal = 0;
    var menuKey = "";
    if (Model.KeywordType == enumMenuVal && Model.Keywords.Any())
    {
        isEditMenu = true;
        menuTypeVal = Model.Keywords[0].SecondaryType;
        menuKey = Model.Keywords[0].Keyword;
    }
    var scanKey = "";
    if (Model.KeywordType == enumScanVal || Model.KeywordType == enumFocusWithScanVal)
    {
        scanKey = Model.Keywords[0].Keyword;
    }
    var cropSubscribeKey = "";
    if (Model.KeywordType == enumCropSubscribe)
    {
        cropSubscribeKey = Model.Keywords[0].Keyword;
    }
}

